<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/bookListImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/book"
            android:scaleType="centerCrop"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#eee"
            >
            
            <TextView
                android:id="@+id/bookNameList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Name"
                android:textColor="#000"
                android:textSize="30sp"
                android:layout_marginLeft="8dp"
            />

            <TextView
                android:id="@+id/bookAuthorList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Author Name"
                android:layout_below="@id/bookNameList"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/bookPriceList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: Rs 150"
                android:layout_below="@id/bookAuthorList"
                android:layout_marginLeft="10dp"
                android:textSize="25sp"
                />
        </RelativeLayout>
    </LinearLayout>
    

</androidx.cardview.widget.CardView>